@using System.Net.Http
@using Newtonsoft.Json
@using Microsoft.AspNetCore.Hosting
@using AberFitnessLayout.Models
@inject IHttpClientFactory httpClientFactory
@inject IHostingEnvironment environment 
@{
    var isUserLoggedIn = User.HasClaim("user_type", "member") || User.HasClaim("user_type", "coordinator") || User.HasClaim("user_type", "administrator");
    var httpClient = httpClientFactory.CreateClient();
    var dockerHost = environment.IsProduction() ? "docker1" : "docker2";
    var response = await httpClient.GetAsync($"https://{dockerHost}.aberfitness.biz/html-service/api/Navbar");
    var appList = new List<App>();
    if (response.IsSuccessStatusCode)
    {
        appList = JsonConvert.DeserializeObject<List<App>>(response.Content.ReadAsStringAsync().Result);
    }
}

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">AberFitness</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                @if (appList.Count == 0)
                {
                    <li><a href="/">Failed to load navbar content</a></li>
                }
                else
                {

                    @foreach (var app in appList)
                    {
                        if (app.AppLinks.Count == 0)
                        {
                            <li><a href="@app.Uri">@app.DisplayName</a></li>
                        }
                        else
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@app.DisplayName <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    @foreach (var appLink in app.AppLinks)
                                    {
                                        <li><a href="@appLink.Uri">@appLink.DisplayName</a></li>
                                    }

                                </ul>
                            </li>
                        }
                    }
                }
            </ul>
            @if (isUserLoggedIn)
            {
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/gatekeeper">Profile</a></li>
                    <li><a href="/sign-out">Log Out</a></li>
                </ul>
            }
        </div>
    </div>
</nav>