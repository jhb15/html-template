@model AberFitnessLayout.Models.AppSubLink

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>AppSubLink</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="AppLinkId" value="@Model.AppLinkId" />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DisplayName" class="control-label"></label>
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uri" class="control-label"></label>
                <input asp-for="Uri" class="form-control" />
                <span asp-validation-for="Uri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccessLevel" class="control-label"></label>
                <select asp-for="AccessLevel" asp-items="Html.GetEnumSelectList<AberFitnessLayout.Models.AppLinkAccessLevel>()" class="form-control"></select>
                <span asp-validation-for="AccessLevel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="AppLinksManagement" asp-action="Edit" asp-route-id="@Model.AppLinkId">Back</a>
</div>

